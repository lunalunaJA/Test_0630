<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <layout class="ch.qos.logback.classic.PatternLayout">
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-4level [%logger{0}.%method:%line]- %msg%n</pattern>
    </layout>
  </appender>

  <appender name="LOGFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <!-- <file>D:/apache-tomcat-7.0.53/logs/zenithst/zenithst.log</file> -->
    <!-- <file>D:/zenithst/logs/zenithst.log</file> -->
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>D:/zenithst/logs/zenithst.%d{yyyy-MM-dd}.log</fileNamePattern>
      <!-- 30일 지난 파일은 삭제한다. -->
      <maxHistory>30</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-4level [%logger.%method:%line] - %msg %n</pattern>
    </encoder>
  </appender>

  <!-- RULES for logging DEBUG < INFO < WARN < ERROR < FATAL. -->
  <logger name="com.zenithst" additivity="false">
    <level value="DEBUG" />
    <appender-ref ref="LOGFILE" />
    <appender-ref ref="CONSOLE" />
  </logger>

  <!-- Query Loggers -->
  <logger name="jdbc.sqlonly" additivity="false">
    <level value="INFO" />
    <appender-ref ref="LOGFILE" />
    <appender-ref ref="CONSOLE" />
  </logger>

  <logger name="jdbc.sqltiming" additivity="false">
    <level value="warn" />
     <appender-ref ref="LOGFILE" />
    <appender-ref ref="CONSOLE" />
  </logger>

  <logger name="jdbc.audit" additivity="false">
    <level value="warn" />
   <appender-ref ref="LOGFILE" />
    <appender-ref ref="CONSOLE" />
  </logger>

  <logger name="jdbc.resultset" additivity="false">
    <level value="warn" />
    <appender-ref ref="LOGFILE" />
    <appender-ref ref="CONSOLE" />
  </logger>

  <logger name="jdbc.resultsettable" additivity="false">
    <level value="INFO" />
     <appender-ref ref="LOGFILE" />
    <appender-ref ref="CONSOLE" />
  </logger>


  <!-- 3rdparty Loggers -->
  <logger name="org.springframework">
    <level value="ERROR" />
    <appender-ref ref="LOGFILE" />
    <appender-ref ref="CONSOLE" />
  </logger>

  <root>
    <level value="ERROR" />
    <appender-ref ref="CONSOLE" />
  </root>

</configuration>